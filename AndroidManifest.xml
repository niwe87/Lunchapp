<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ones.lunch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="de.ones.lunch.StartActivity"></activity>
        <activity android:name="de.ones.lunch.LunchAppActivity"></activity>
        <activity android:name="de.ones.lunch.DinerFutureActivity"></activity>
        <activity android:name="de.ones.lunch.DinerInfoActivity"></activity>
        <activity android:name="de.ones.lunch.FavInfoActivity"></activity>
        <activity android:name="de.ones.lunch.FavSelectActivity"></activity>
        <activity android:name="de.ones.lunch.RegisterActivity"></activity>
        <activity android:name="de.ones.lunch.AddRestaurantActivity"></activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>